{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 500,
    "params": [
        {
            "name": "Year_selection",
            "value": 2015,
            "bind": {
                "input": "range",
                "min": 1850,
                "max": 2015,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Exo329/3179/main/DataViz2/js/ne_110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME_LONG",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "#ddd",
                "stroke": "white",
                "strokeWidth": 1
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://media.githubusercontent.com/media/Exo329/3179/main/DataViz2/data/GlobalCO2Emissions.csv",
                "format": {"type": "csv"}
            },
            "transform": [
                {
                    "lookup": "country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/Exo329/3179/main/DataViz2/js/ne_110m.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "key": "properties.NAME_LONG"
                    },
                    "as": "geo"
                },
                {
                    "filter": "datum.year == Year_selection"
                },
                {
                  "filter": "datum.ISO != ''"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "#fff",
                "strokeWidth": 0.5
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "co2_per_capita",
                    "type": "quantitative",
                    "title": "CO2 emissions per capita (tonnes)",
                    "legend": {
                        "format": ".2f"
                    }
                },
                "tooltip": [
                    {
                        "field": "country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "co2_per_capita",
                        "type": "quantitative",
                        "title": "CO2 emissions per capita (tonnes)",
                        "format": ".2f"
                    },
                    {
                        "field": "year",
                        "type": "quantitative",
                        "title": "Year"
                    }
                ]
            }
        }
    ]
}