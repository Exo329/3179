{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 500,
    "params": [
        {
            "name": "Year_selection",
            "value": 2015,
            "bind": {
                "input": "range",
                "min": 1850,
                "max": 2015,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Exo329/3179/main/DataViz2/data/ne_110m_admin_0_countries.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME_LONG",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "white",
                "stroke": "black",
                "strokeWidth": 1
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Exo329/3179/main/DataViz2/data/GlobalCO2Emissions.csv",
                "format": {
                    "type": "csv"
                }
            },
            "transform": [
                {
                    "lookup": "country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/Exo329/3179/main/DataViz2/data/ne_110m_admin_0_countries.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "key": "properties.NAME_LONG"
                    },
                    "as": "geo"
                },
                {
                    "filter": "datum.year == Year_selection"
                },
                {
                    "calculate": "toNumber(datum.co2) / toNumber(datum.population) * 1000000",
                    "as": "CO2 emissions per capita (tonnes)"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "#fff",
                "strokeWidth": 0.5
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "CO2 emissions per capita (tonnes)",
                    "type": "quantitative",
                    "legend": {
                        "format": ".2f"
                    },
                    "scale": {
                        "scheme": "greys",
                        "nice": true
                    }
                },
                "tooltip": [
                    {
                        "field": "country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "CO2 emissions per capita (tonnes)",
                        "type": "quantitative",
                        "format": ".2f"
                    },
                    {
                        "field": "year",
                        "type": "quantitative",
                        "title": "Year"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Exo329/3179/main/DataViz2/data/GlobalLandTemperaturesByMajorCityAveragesPrePost1970.csv",
                "format": {
                    "type": "csv"
                }
            },
            "transform": [
                {
                    "calculate": "toNumber(datum.AverageTemperaturePost1970) - toNumber(datum.AverageTemperaturePre1970)",
                    "as": "Temperature change"
                }
            ],
            "mark": {
                "type": "circle",
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "longitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "color": {
                    "field": "Temperature change",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "redblue",
                        "reverse": true,
                        "domainMid": 0,
                        "nice": true
                    }
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "City",
                        "type": "nominal"
                    },
                    {
                        "field": "AverageTemperaturePre1970",
                        "title": "Average Temperature pre 1970 (exc)",
                        "type": "quantitative",
                        "format": ".2f"
                    },
                    {
                        "field": "AverageTemperaturePost1970",
                        "title": "Average Temperature post 1970 (inc)",
                        "type": "quantitative",
                        "format": ".2f"
                    },
                    {
                        "field": "Temperature change",
                        "title": "Temperature change (between averages pre and post 1970)",
                        "type": "quantitative",
                        "format": ".2f"
                    }
                ]
            }
        }
    ],
    "resolve": {
        "scale": {
            "color": "independent"
        }
    }
}