{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Global average land temperatures" },
    "data": {
        "url": "data/GlobalTemperaturesYearly.csv"
    },
    "transform": [
        { "calculate": "toNumber(datum.LandAverageTemperature) - toNumber(datum.LandAverageTemperatureUncertainty)", "as": "ci0" },
        { "calculate": "toNumber(datum.LandAverageTemperature) + toNumber(datum.LandAverageTemperatureUncertainty)", "as": "ci1" }
    ],
    "layer": [
        {
            "mark": "errorband",
            "encoding": {
                "x": { "field": "dt", "title": "Year", "type": "temporal"},
                "y": { "field": "ci1", "type": "quantitative", "title":"Average land temperature (Celsius)" },
                "y2": { "field": "ci0", "type": "quantitative" }
            }
        },
        {
            "mark": "line",
            "encoding": {
                "x": { "field": "dt", "title": "Year", "type": "temporal" },
                "y": { "field": "LandAverageTemperature", "type": "quantitative", "title":"Average land temperature (Celsius)", "aggregate": "average" }
            }
        }
    ]
}