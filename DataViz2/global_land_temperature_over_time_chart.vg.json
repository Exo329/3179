{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Global average land temperatures" },
    "width": "container",
    "data": {
        "url": "data/GlobalTemperaturesYearly.csv"
    },
    "transform": [
        { "calculate": "toNumber(datum.LandMinTemperature) - toNumber(datum.LandMinTemperatureUncertainty) - avg_temp", "as": "min_ci" },
        { "calculate": "toNumber(datum.LandMaxTemperature) + toNumber(datum.LandMaxTemperatureUncertainty) - avg_temp", "as": "max_ci" },
        { "calculate": "toNumber(datum.LandMaxTemperature) - avg_temp", "as": "max" },
        { "calculate": "toNumber(datum.LandMinTemperature) - avg_temp", "as": "min" },
        { "calculate": "toNumber(datum.LandAverageTemperature) - avg_temp", "as": "avg" },
        { "filter": "toNumber(datum.Year) >= 1850" }
    ],
    "params": [
        { "name": "avg_temp", "value": 8.667937326 }
    ],
    "layer": [
        {
            "mark": "area",
            "encoding": {
                "x": { "field": "Year", "title": "Year", "type": "temporal", "timeUnit": "year" },
                "y": { "field": "max", "type": "quantitative", "title":"Average land temperature (Celsius)" },
                "y2": { "field": "min" }
            }
        },
        {
            "mark": "errorband",
            "encoding": {
                "x": { "field": "Year", "title": "Year", "type": "temporal", "timeUnit": "year" },
                "y": { "field": "max_ci", "type": "quantitative", "title":"Average land temperature (Celsius)" },
                "y2": { "field": "min_ci" }
            }
        },
        {
            "mark": "line",
            "encoding": {
                "x": { "field": "Year", "title": "Year", "type": "temporal", "timeUnit": "year" },
                "y": { "field": "avg", "type": "quantitative", "title":"Average land temperature (Celsius)" }
            }
        }
    ]
}