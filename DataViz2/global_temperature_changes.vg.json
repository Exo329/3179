{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 450,
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Exo329/3179/main/DataViz2/data/ne_110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Exo329/3179/main/DataViz2/data/GlobalLandTemperaturesByMajorCity1850average2013value.csv",
                "format": {"type": "csv"}
            },
            "transform": [
                {
                  "calculate": "toNumber(datum.Temperature2013) - toNumber(datum.AverageTemperature)", "as": "Temperature change (average since 1850 compared to 2013)"
                }
            ],
            "mark": {"type": "circle", "tooltip": {"content": "data"}},
            "encoding": {
                "longitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Temperature change (average since 1850 compared to 2013)",
                    "type": "quantitative"
                },
                "color": {
                    "field": "Temperature change (average since 1850 compared to 2013)",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "redblue",
                        "reverse": true,
                        "domainMid": 0
                    }
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "City",
                        "type": "nominal"
                    },
                    {
                        "field": "Temperature change (average since 1850 compared to 2013)",
                        "type": "quantitative",
                        "format": ".2f"
                    }
                ]
            }
        }
    ]
}