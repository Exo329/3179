{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 500,
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Exo329/3179/main/DataViz2/data/ne_110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME_LONG",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "#ddd",
                "stroke": "white",
                "strokeWidth": 1
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Exo329/3179/main/DataViz2/data/GlobalLandTemperaturesByMajorCity1850average2013value.csv",
                "format": {"type": "csv"}
            },
            "transform": [
                {
                    "lookup": "country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/Exo329/3179/main/DataViz2/data/ne_110m.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "key": "properties.NAME_LONG"
                    },
                    "as": "geo"
                },
                {
                  "calculate": "toNumber(datum.Temperature2013) - toNumber(datum.AverageTemperature)", "as": "Temperature change (average since 1850 compared to 2013)"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "#fff",
                "strokeWidth": 0.5
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "Temperature change (average since 1850 compared to 2013)",
                    "type": "quantitative",
                    "legend": {
                        "format": ".2f"
                    }
                },
                "tooltip": [
                    {
                        "field": "country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Temperature change (average since 1850 compared to 2013)",
                        "type": "quantitative",
                        "format": ".2f"
                    },
                    {
                        "field": "year",
                        "type": "quantitative",
                        "title": "Year"
                    }
                ]
            }
        }
    ]
}